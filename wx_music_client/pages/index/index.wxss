#giveMusicName {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 5px;
}
#picUrl {
  border-radius: 50%;
  width: 300px;
  height: 300px;
  margin-top: 10%;
}
.musicname {
  border: 2px #ddd solid;
  border-radius: 4px;
  height: 100%;
  padding: 8px;
  font-family: "Microsoft Yahei";
}
#musicInfos {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 40px;
}
#singerinfos {
  font-size: 17px;
  color: #555;
   padding-top: 5%; 
  /* margin-bottom: 5%; */
}
#appTitle {
  font-size: 17px;
  color: #362e2b;
}
.list {
  display: flex;
  flex-direction: column;
  align-items: space-around;
  justify-content: flex-start;
}
.songitem {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px;
  /* border: 2px #ddd solid; */
  border-radius: 4px;
}
.songitem.even{
  background: #f3f3f3;
}
.songitem.current{
  color: #31c27c;
}
.songitem .song-no{
  width: 30px;
}

.songitemImage {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  flex: 0 0 30px;
}
.delImage {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  flex: 0 0 20px;
}
.name {
  flex: 1;
  padding-left: 10px;
  font-size: 15px;
}
.album {
  font-size: 15px;
  flex: 2;
}
.musicContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-play{
  width: 83rpx;
  height: 83rpx;
}
.icon-list{
  width: 70rpx;
  height: 55rpx;
  margin-top:15rpx;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #31c27c;  
  color: #fff;  
}
.song-info{
  display: flex; 
  height: 30px;
  line-height: 30px;
  padding: 0 2%; 
}
.song-info .song-name{
  width: 15%;
  flex: 1;
  overflow: hidden;
  text-align: left;
  padding-top: 5px;
}
.song-info .song-progress{
  width: 65%; 
  margin-right: 3%
}
.song-info .song-time{
  width: 15%;
  text-align: right;
  padding-top: 5px;
}
.controls{
  padding: 5px 0;
  font-size: 15px;
  text-align: center;
}
.controls .btn{
  display: inline-block;
  width: 40px;
  height: 40px;
  margin: 0 5px;
  text-align: center;
  text-indent: -999px;
  background-size: 100% 100%;
}
.controls .btn-mode{
  position: absolute;
  width: 24px;
  height: 24px;
  left: 15px;
  bottom: 15px;
}
.controls .btn-showlist{
  position: absolute;
  width: 45px;
  height: 45px;
  right: 10px;
  bottom: 6px;
}

.song-lyric {
    position: relative; 
    font-size: 15px;
    height:320px;
    width: 250px;
    flex: 1;  
    padding-top: 10px;
}
.song-lyric__swiper {
    display: flex;
    flex: 1; 
    height: 600rpx;
    text-align: center;
}
.song-lyric__swiper .swiper-item {
    display: flex;
    justify-content: center;
    align-items: center;
}

 .song-lyric__swiper .lyric-item {
    height: 20rpx;
    font-size: 12px;
    line-height: 1;
    align-content: center;
    text-align: center;
    align-items: center;
    width:50%;
} 

.navbar {
    display: flex;
    background: #fff;
    height: 80rpx;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    color: #31c27c;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #31c27c;
}
